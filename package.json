{
  "name": "remark-license",
  "version": "5.2.0",
  "description": "remark plugin to add a license section to your readme",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "text",
    "plain",
    "text",
    "license",
    "spdx",
    "readme"
  ],
  "repository": "remarkjs/remark-license",
  "bugs": "https://github.com/remarkjs/remark-license/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Ben Briggs <beneb.info@gmail.com> (http://beneb.info)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "mdast-util-heading-range": "^2.0.0",
    "parse-author": "^2.0.0",
    "spdx-license-list": "^6.0.0"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "is-hidden": "^1.0.0",
    "negate": "^1.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark": "^13.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "tinyify": "^3.0.0",
    "xo": "^0.38.0"
  },
  "scripts": {
    "format": "remark . -qfo --ignore-pattern test/ && prettier . -w --loglevel warn && xo --fix",
    "build-bundle": "browserify . -s remarkLicense > remark-license.js",
    "build-mangle": "browserify . -s remarkLicense -p tinyify > remark-license.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/prefer-number-properties": "off",
      "unicorn/prefer-optional-catch-binding": "off"
    },
    "ignores": [
      "remark-license.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
